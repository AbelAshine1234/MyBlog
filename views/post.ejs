<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= post.title %> - abelashine</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header class="site-header">
    <h1><a href="/">abelashine</a></h1>
    <nav>
      <% if (currentUserId) { %>
        <a href="/admin">Admin</a>
        <form method="post" action="/logout" style="display:inline">
          <button>Logout</button>
        </form>
      <% } else { %>
        <a href="/login">Login</a>
      <% } %>
    </nav>
  </header>

  <main>
    <article class="post">
      <h1><%= post.title %></h1>
      <p class="meta">Published <%= new Date(post.created_at).toLocaleString() %>
        <% if (post.updated_at) { %>
          • Updated <%= new Date(post.updated_at).toLocaleString() %>
        <% } %>
      </p>
      <div class="content"><%- contentHtml %></div>
    </article>

    <section class="comments">
      <h3>Comments</h3>
      <ul class="comment-list">
        <% comments.forEach(c => { %>
          <li>
            <p class="meta"><strong><%= c.author %></strong> • <%= new Date(c.created_at).toLocaleString() %></p>
            <p><%= c.body %></p>
          </li>
        <% }) %>
      </ul>
      <h3>Add a comment</h3>
      <form method="post" action="/post/<%= post.slug %>/comments">
        <input type="text" name="author" placeholder="Your name" />
        <textarea name="body" placeholder="Write a comment" required></textarea>
        <button>Add comment</button>
      </form>
    </section>
  </main>
</body>
<footer>
  <p class="site-footer">© 2025 abelashine</p>
</footer>
</html>


